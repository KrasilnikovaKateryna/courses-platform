@model CoursePlatform.Models.Course
@{
ViewData["Title"] = "Delete course";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-7">
        <div class="card shadow-sm border-danger">
            <div class="card-body p-4">
                <h3 class="mb-3 text-danger" id="deleteCourseTitle" data-testid="delete-course-title">Delete course</h3>

                <p>Are you sure you want to delete this course?</p>

                <div class="mb-3">
                    <strong id="courseToDeleteTitle" data-testid="delete-course-name">@Model.Title</strong>
                </div>

                <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
                    @Html.AntiForgeryToken()

                    <button id="confirmDeleteBtn"
                            data-testid="confirm-delete"
                            class="btn btn-danger"
                            type="submit">
                        Delete
                    </button>

                    <a class="btn btn-link"
                       asp-action="Index"
                       id="cancelDeleteCourse"
                       data-testid="cancel-delete">
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
