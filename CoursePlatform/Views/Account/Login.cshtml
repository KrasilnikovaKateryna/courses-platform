@{
ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm mt-4">
            <div class="card-body p-4">
                <h3 class="card-title mb-3">Sign in</h3>

                @if (!ViewData.ModelState.IsValid)
                {
                <div class="alert alert-danger" id="loginError" data-testid="login-error" role="alert">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                    <div>@err.ErrorMessage</div>
                    }
                </div>
                }

                <form method="post" asp-controller="Account" asp-action="Login">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label" for="email">Email</label>
                        <input id="email" data-testid="login-email" name="email" type="email"
                               class="form-control" placeholder="teacher@demo.com"
                               required autocomplete="username" />
                        @if (ViewData.ModelState.TryGetValue("Email", out var emailState) && emailState.Errors.Count > 0)
                        {
                        <div class="text-danger mt-1" id="emailError">@emailState.Errors[0].ErrorMessage</div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input id="password" data-testid="login-password" name="password" type="password"
                               class="form-control" placeholder="123456"
                               required autocomplete="current-password" />
                        @if (ViewData.ModelState.TryGetValue("Password", out var passState) && passState.Errors.Count > 0)
                        {
                        <div class="text-danger mt-1" id="passwordError">@passState.Errors[0].ErrorMessage</div>
                        }
                    </div>

                    <button id="loginBtn" data-testid="login-submit" type="submit" class="btn btn-primary w-100">Sign in</button>

                    <div class="text-muted small mt-3">
                        Demo accounts: <br />
                        teacher@demo.com / Test@123JesusGayHrenkAtIA*bi <br />
                        student@demo.com / Test@123JesusGayHrenkAtIA*bi <br />
                        admin@demo.com / Test@123JesusGayHrenkAtIA*bi
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
